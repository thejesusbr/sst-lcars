{
  "name": "sst-lcars-vue",
  "version": "0.0.1",
  "description": "SST LCARS SDK converted to Vue 3 with Composition API",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "type-check": "vue-tsc --build --force",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-typescript": "^14.2.0",
    "eslint": "^9.16.0",
    "eslint-plugin-vue": "^9.31.0",
    "typescript": "~5.6.3",
    "vite": "^6.0.1",
    "vue-tsc": "^2.1.10",
    "storybook": "^10.1.0",
    "@storybook/vue3-vite": "^10.1.0",
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-vitest": "^10.1.0",
    "@storybook/addon-a11y": "^10.1.0",
    "@storybook/addon-docs": "^10.1.0",
    "@storybook/addon-onboarding": "^10.1.0",
    "eslint-plugin-storybook": "^10.1.0",
    "vitest": "^4.0.14",
    "playwright": "^1.57.0",
    "@vitest/browser-playwright": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14"
  }
}
